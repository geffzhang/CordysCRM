{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "LogFilePath": "/opt/cordys/logs/cordys-crm"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=cordys_crm;Uid=root;Pwd=password;",
    "Redis": "localhost:6379"
  },
  "ApplicationSettings": {
    "Name": "cordys-crm",
    "Port": 8081
  },
  "Compression": {
    "Enabled": true,
    "MinimumSizeBytes": 2048
  },
  "FileUpload": {
    "MaxFileSizeMB": 1024,
    "MaxRequestSizeMB": 1024
  },
  "Session": {
    "TimeoutHours": 12
  },
  "Swagger": {
    "Enabled": true
  },
  "Dashboard": {
    "Whitelist": {
      "Enabled": false,
      "AllowedIps": []
    }
  }
}
